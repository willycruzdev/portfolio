---
import Section from "../Section.astro"
import { languages } from "@cv"

---

<Section title="Languages">
    <ul>
        {
            languages.map(
              ({ language, fluency }) => {
                
                return (
                  <li>
                    <article>
                      <header>
                        <div>
                          <h4>{language}</h4>
                          <p>{fluency}</p>
                        </div>
        
                      </header>
                    </article>
                  </li>
                )
              }
            )
          }

    </ul>
</Section>

<style>
    ul {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
      /* margin-inline: -16px; */
    }
  
    article h3 {
      font-weight: 500;
      color: #111;
    }
  
    article h4 {
      color: #222;
      font-weight: 500;
    }
  
    header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 10px;
    }
   
  </style>
  